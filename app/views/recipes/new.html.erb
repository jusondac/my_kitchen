<% content_for :title, "Create New Recipe" %>
<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="flex items-center justify-between border-b border-gray-700 pb-6 mb-8">
    <div>
      <h1 class="text-3xl font-bold text-white">Create New Recipe</h1>
      <p class="text-gray-400 mt-2">Share your culinary creation with the world</p>
    </div>
    <%= link_to recipes_path, class: "inline-flex items-center px-4 py-2 bg-gray-800 border border-gray-700 rounded-md font-medium text-gray-300 hover:bg-gray-700 transition-colors" do %>
      <svg class="w-5 h-5 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to recipes
    <% end %>
  </div>
  <%= render "form", recipe: @recipe %>
</div>
