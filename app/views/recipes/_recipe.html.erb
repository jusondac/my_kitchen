<div id="<%= dom_id(recipe) %>" class="bg-gray-800 rounded-lg p-6 mb-6 text-white">
  <div class="mb-6">
    <h2 class="text-2xl font-bold mb-2"><%= recipe.name %></h2>
    <p class="text-gray-300 text-sm mb-4">Added by: <%= recipe.user.email %> | Cooking time: <%= recipe.cooking_time %> minutes</p>
    <div class="mb-4">
      <h3 class="text-lg font-semibold mb-2">Description</h3>
      <p class="text-gray-300"><%= recipe.description %></p>
    </div>
  </div>
  <div class="mb-6">
    <h3 class="text-lg font-semibold mb-2">Ingredients</h3>
    <% if recipe.recipe_ingredients.any? %>
      <ul class="list-disc pl-5 text-gray-300">
        <% recipe.recipe_ingredients.each do |recipe_ingredient| %>
          <li><%= recipe_ingredient.quantity %> of <%= recipe_ingredient.ingredient.name %></li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-400">No ingredients listed</p>
    <% end %>
  </div>
  <div>
    <h3 class="text-lg font-semibold mb-2">Instructions</h3>
    <div class="text-gray-300 whitespace-pre-line">
      <%= recipe.instructions %>
    </div>
  </div>
</div>
