<%= form_with(model: recipe, class: "contents text-white flex flex-col gap-5 mt-4", data: { controller: "recipe-form" }) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>
      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.text_field :name, placeholder: "name", class: ["block shadow-sm rounded-md border bg-gray-700 px-3 py-2 mt-2 w-full", {"border-gray-600 focus:outline-blue-600": recipe.errors[:name].none?, "border-red-400 focus:outline-red-600": recipe.errors[:name].any?}] %>
  </div>
  <div>
    <%= form.textarea :description, placeholder: "description", class: ["block shadow-sm rounded-md border bg-gray-700 px-3 py-2 mt-2 w-full", {"border-gray-600 focus:outline-blue-600": recipe.errors[:description].none?, "border-red-400 focus:outline-red-600": recipe.errors[:description].any?}] %>
  </div>
  <div>
    <%= form.textarea :instructions, placeholder: "instructions", class: ["block shadow-sm rounded-md border bg-gray-700 px-3 py-2 mt-2 w-full", {"border-gray-600 focus:outline-blue-600": recipe.errors[:instructions].none?, "border-red-400 focus:outline-red-600": recipe.errors[:instructions].any?}] %>
  </div>
  <div>
    <%= form.number_field :cooking_time, placeholder: "cooking_time", class: ["block shadow-sm rounded-md border bg-gray-700 px-3 py-2 mt-2 w-full", {"border-gray-600 focus:outline-blue-600": recipe.errors[:cooking_time].none?, "border-red-400 focus:outline-red-600": recipe.errors[:cooking_time].any?}] %>
  </div>
  <div class="hidden">
    <%= form.text_field :user_id, value: Current.user&.id, class: ["block shadow-sm rounded-md border bg-gray-700 px-3 py-2 mt-2 w-full", {"border-gray-600 focus:outline-blue-600": recipe.errors[:user_id].none?, "border-red-400 focus:outline-red-600": recipe.errors[:user_id].any?}] %>
  </div>
  <div>
    <h3 class="text-lg font-semibold mb-2">Ingredients</h3>
    <div id="ingredients" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3" data-recipe-form-target="ingredients">
      <%= form.fields_for :recipe_ingredients do |ingredient_form| %>
        <div class="p-3 border border-gray-600 rounded">
          <div class="mb-2">
            <%= ingredient_form.collection_select :ingredient_id, Ingredient.all, :id, :name, 
                { prompt: "Select an ingredient" }, 
                { class: "block shadow-sm rounded-md border bg-gray-700 px-3 py-2 w-full border-gray-600 focus:outline-blue-600" } %>
          </div>
          <div>
            <%= ingredient_form.text_field :quantity, placeholder: "Quantity (e.g., 2 cups)", 
                class: "block shadow-sm rounded-md border bg-gray-700 px-3 py-2 w-full border-gray-600 focus:outline-blue-600" %>
          </div>
          <% unless ingredient_form.object.new_record? %>
            <div class="mt-2">
              <%= ingredient_form.check_box :_destroy %>
              <%= ingredient_form.label :_destroy, "Remove", class: "text-red-400" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="mt-3">
      <%= link_to "Add Ingredient", "#", id: "add-ingredient", class: "text-blue-400 hover:text-blue-300" %>
    </div>
  </div>
  <div>
    <%= form.submit nil, class:"font-bold px-4 py-2 bg-blue-600 text-white rounded-md shadow-md hover:bg-blue-500 inline-flex items-center" %>
  </div>
<% end %>